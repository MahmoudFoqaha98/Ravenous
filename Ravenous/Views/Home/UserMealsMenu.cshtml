@model IEnumerable<Ravenous.Models.meal>
@{
    ViewBag.Title = "قـائـمـة الـوجـبـات";
}

<style>
    th {
        text-align: center;
    }
    .myDiv {
        height: 200px;
    }
</style>


<h2>جـمـيـع الـوجـبـات</h2>


<center>
    <div class="jumbotron" style="width:80%;">
        @foreach (var plan in Model.GroupBy(p => p.mealCategory.type))
        {
            <div class="panel panel-primary">

                <div class="panel-heading"><h3>@plan.Key</h3></div>

                <div class="panel-body">
                    @foreach (var plan1 in plan)
                    {
                        <div class="col-sm-6 col-md-3">
                            <div class="thumbnail">
                                <div class="myDiv"> 
                                <img style="width:100%;height:100%;" src="@Url.Content(plan1.mealImage)" alt="...">
                                </div>

                                <div class="caption">
                                    <h3>@plan1.mealName</h3>

                                    <p>
                                        <img src="~/Content/images/dollar.png" height="20" />
                                        @Html.DisplayFor(modelItem => plan1.mealPrice)
                                    </p>


                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }


    </div>
</center>

<div>

    <a href="/Home/AllRestaurants" class="btn btn-warning">
        <span>خــلــف</span>
        <i class="far fa-hand-point-left"></i>
    </a>
</div>

