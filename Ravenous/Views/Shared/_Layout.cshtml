                        <li>عنا</li>
                        <li>الخدمات</li>
                        <li>اجتماعي</li>
                        <li>لمسات الختام</li>
                    </ul>
                </div>
               
                
                <div class="col">
                    <h1>الدعم</h1>
                    <ul>
                        <li>
                            <img src="~/Content/images/phone.png" width="28" style="width: 28px;" />
                            <a href="https://web.whatsapp.com/" target="_blank">042-270-280</a>
                        </li>
                        <li>
                            <img src="~/Content/images/whatsapp.png" width="28" style="width: 28px;" />
                            <a href="https://web.whatsapp.com/" target="_blank">970-599-471396+</a>
                        </li>
                        <li>
                            <img src="~/Content/images/telegram.png" width="28" style="width: 28px;" />
                            <a href="https://web.telegram.org/k/" target="_blank">970-599-471396+</a>
                        </li>
                    </ul>
                </div>
                <div class="col social">
                    <h1>اجتماعي</h1>
                    <ul>
                        <li><img src="~/Content/images/facebook.png" width="32" style="width: 32px;"></li>
                        <li><img src="~/Content/images/instagram.png" width="32" style="width: 32px;"></li>
                        <li><img src="~/Content/images/twitter.png" width="32" style="width: 32px;"></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- END OF FOOTER -->

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
