<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link href="~/Content/footer.css" rel="stylesheet" />
</head>
<body dir="rtl">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:#202040 !important">
        <div class="container-fluid" style="padding-top:10px;padding-bottom:5px;">
            <div class="navbar-header navbar-right">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a href="/Home/index">
                    <img width="80" height="50" src="~/Content/images/favicon.ico" alt="الصورة غير موجودة" title="الرئيسية" />
                    <span class="navbar-brand">الـرئـيـسـيـة</span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" >

                    <li class="navLinks">
                        <a href="@Url.Action("About","Home")">
                            <img src="~/Content/images/about.png" height="30" /> 
                            <span>عـنـا</span>
                        </a>
                    </li>
                    <li class="navLinks">
                        
                        <a href="@Url.Action("AllRestaurants","Home")">
                            <img src="~/Content/images/restaurant_nav.png" height="30" /> 
                            <span>الـمـطـاعـم</span>
                        </a>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-left">
                    @{
                        if (Session["restaurantName"] != null)
                        {
                            <li class="dropdown">

                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <span class="navLinks">@Session["restaurantName"].ToString() </span>
                                    @*<span class="caret"></span>*@
                                    <img class="img-circle" src="@Url.Content(Session["restaurantImage"].ToString())" alt="..." height="30">
                                </a>

                                <ul class="dropdown-menu">

                                    <li>
                                       
                                        <a href="@Url.Action("Index","Home")" class="row">
                                            <span>الـمـلـف الـشـخـصـي</span>
                                            <img src="~/Content/images/profile.png" height="20" style="float: left;" />
                                        </a>
                                    </li>
                                    
                                    <li role="separator" class="divider"></li>
                                   
                                    <li>
                                        <a href="@Url.Action("Logout","Home")" class="row">
                                            <span>تـسـجـيـل خـروج</span>
                                            <img src="~/Content/images/logout.png" height="20" style="float: left;" />
                                        </a>
                                    </li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="navLinks">
                                <a href="@Url.Action("RestaurantPage","Home")">
                                    <img src="~/Content/images/login.png" height="30" /> 
                                    <span>تـسـجـيـل دخـول</span>
                                </a>
                            </li>
                        }
                    }
                    <li class="navLinks">
                        
                        <a href="@Url.Action("CreateRestaurant","Home")">
                            <img src="~/Content/images/add-restaurant.png" height="30" /> 
                            <span>إنـشـاء مـطـعـم</span>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="margin-top: 35px;">
        @RenderBody()

        <!-- FOOTER START -->
        <div class="footer">
            <div class="contain">
                <div class="col">
                    <h1>الشركة</h1>
                    <ul>
                        <li>عنا</li>
                        <li>الخدمات</li>
                        <li>إجتماعي</li>
                        <li>لمسات الختام</li>
                    </ul>
                </div>
               
                
                <div class="col">
                    <h1>الدعم</h1>
                    <ul>
                        <li>
                            <img src="~/Content/images/phone.png" width="28" style="width: 28px;" />
                            <a href="https://web.whatsapp.com/" target="_blank">042-270-280</a>
                        </li>
                        <li>
                            <img src="~/Content/images/whatsapp.png" width="28" style="width: 28px;" />
                            <a href="https://web.whatsapp.com/" target="_blank">970-599-471396+</a>
                        </li>
                        <li>
                            <img src="~/Content/images/telegram.png" width="28" style="width: 28px;" />
                            <a href="https://web.telegram.org/k/" target="_blank">970-599-471396+</a>
                        </li>
                    </ul>
                </div>
                <div class="col social">
                    <h1>إجتماعي</h1>
                    <ul>
                        <li><img src="~/Content/images/facebook.png" width="32" style="width: 32px;"></li>
                        <li><img src="~/Content/images/instagram.png" width="32" style="width: 32px;"></li>
                        <li><img src="~/Content/images/twitter.png" width="32" style="width: 32px;"></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- END OF FOOTER -->

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

